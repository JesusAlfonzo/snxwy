---
import "@styles/global.css";
import "@fontsource/ubuntu";
import Navbar from "@components/ui/Navbar.astro";
import LigthLogo from "@assets/logos/LigthLogo.svg";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="bg-[#1a1a1a] flex justify-center m-0 p-0">
    <div
      class="relative w-full md:w-[75vw] lg:w-[65vw] min-h-screen bg-[#f5f5f5] shadow-[0_0_60px_rgba(0,0,0,0.4)] flex flex-col"
    >
      <div
        class="absolute inset-0 z-0 pointer-events-none overflow-hidden"
        style="mask-image: linear-gradient(to bottom, black 85%, transparent 100%); -webkit-mask-image: linear-gradient(to bottom, black 85%, transparent 100%);"
      >
        <div
          class="absolute inset-0"
          style="background-image: 
                linear-gradient(to right, rgba(0,0,0,0.05) 1px, transparent 1px),
                linear-gradient(to bottom, rgba(0,0,0,0.05) 1px, transparent 1px);
                background-size: 30px 30px;"
        >
        </div>

        <div
          class="absolute inset-0 opacity-[0.03] mix-blend-multiply noise-bg"
        >
        </div>
      </div>

      <header class="relative z-20 w-full">
        <Navbar />
      </header>

      <main class="relative z-10 p-8 md:px-20 lg:px-40 flex-1">
        <slot />
      </main>

      <footer class="relative z-10 py-8 text-center">
        <div class="flex justify-center pb-4">
          <img src={LigthLogo.src} alt="Logo" width="40" height="40" />
        </div>
        <span class="text-[9px] uppercase tracking-[0.4em] text-neutral-400">
          Exploración de la Psiquis — 2026
        </span>
      </footer>
    </div>
  </body>
</html>

<style is:global>
  /* CONFIGURACIÓN GLOBAL */
  html,
  body {
    margin: 0;
    padding: 0;
    width: 100%;
    min-height: 100%;
    font-family: "ubuntu", sans-serif;
    animation: fadeIn 0.5s ease-in;

    /* 1. Mantiene el layout centrado y estable */
    scrollbar-gutter: stable;
    scroll-behavior: smooth;

    /* 2. Oculta el scrollbar en Firefox */
    scrollbar-width: none;

    /* 3. Oculta el scrollbar en Internet Explorer y Edge antiguo */
    -ms-overflow-style: none;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  /* 4. Oculta el scrollbar en Chrome, Safari y Edge moderno (Webkit) */
  ::-webkit-scrollbar {
    display: none;
    width: 0;
    height: 0;
  }

  /* TEXTURA DE RUIDO (Data URI) */
  .noise-bg {
    background-image: url("data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAADIAAAAyACMAAAC0ID9IAAAABlBMVEUAAAD///+l2Z/dAAAAVklEQVRIx+3Myw2AMAhE0S8NoAn9V0In9GCD6SDRSJhAsu9mH8m+DEDfA6A7A6D7GgA9pAn9xwLo6QTo8QZo6QTo8QZo6QTo8QZo6QTo8QZo6QTo8QZo6QTof56yGz6S999lAAAAAElFTkSuQmCC");
    background-repeat: repeat;
  }
</style>
