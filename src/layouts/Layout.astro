---
// ---Imports---
import "../styles/global.css";
import "@fontsource/ubuntu";
import Navbar from "../components/ui/Navbar.astro";

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>

  <body class="bg-black flex justify-center">
    <div
      class="relative w-full md:w-[75vw] lg:w-[65vw] min-h-screen bg-white shadow-[0_0_50px_rgba(0,0,0,0.5)]"
    >
      <div
        class="fixed inset-0 z-0 pointer-events-none w-full md:w-[75vw] lg:w-[65vw] mx-auto"
        style="
            background: white;
            background-image: 
                linear-gradient(to right, rgba(71,85,105,0.15) 1px, transparent 1px),
                linear-gradient(to bottom, rgba(71,85,105,0.15) 1px, transparent 1px),
                radial-gradient(circle at 50% 60%, rgba(236,72,153,0.15) 0%, rgba(168,85,247,0.05) 40%, transparent 70%);
            background-size: 40px 40px, 40px 40px, 100% 100%;
            
            /* EFECTO FADE: Máscara que desvanece el contenido al final */
            -webkit-mask-image: linear-gradient(to bottom, black 60%, transparent 95%);
            mask-image: linear-gradient(to bottom, black 60%, transparent 95%);
        "
      >
      </div>

      <header class="relative z-20 w-full">
        <Navbar />
      </header>

      <main class="relative z-10 p-8 md:px-20 lg:px-40">
        <slot />
      </main>
    </div>
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    min-height: 100%;
    width: 100%;
    font-family: "ubuntu", sans-serif;
    scrollbar-gutter: stable;
  }

  /* --- Estilización del Scroll --- */

  /* Firefox (estándar actual) */
  html {
    scrollbar-width: thin;
    scrollbar-color: #d1d1d1 transparent; /* Color del scroll y del fondo */
  }

  /* Ocultar scrollbar en Chrome, Safari y Edge */
  ::-webkit-scrollbar {
    display: none;
  }

  /* Ocultar scrollbar en Firefox y IE/Edge antiguo */
  html {
    scrollbar-width: none;
    -ms-overflow-style: none;
  }
</style>
